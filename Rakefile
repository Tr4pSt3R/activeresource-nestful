require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "activeresource-nestful"
    gem.summary = %Q{Nestify ActiveResource}
    gem.description = %Q{Adds OAuth and Multipart file support to ActiveResource}
    gem.email = "info@eribium.org"
    gem.homepage = "http://github.com/maccman/nestful-resource"
    gem.authors = ["Alex MacCaw"]
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end